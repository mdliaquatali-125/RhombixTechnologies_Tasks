@model To_Do_List.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/ToDoList.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">

    <!-- SweetAlert CSS -->
    <link href="~/assets/vendor/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: #ffffff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .left {
            padding: 60px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .left h1 {
                font-size: 30px;
                font-weight: 700;
                color: #ff8f16;
                border-left: 6px solid #ffaa00;
                padding-left: 12px;
                margin-bottom: 20px;
            }

            .left p {
                font-size: 13px;
                color: #6C757D;
                margin-bottom: 10px;
            }

        .input-box {
            width: 100%;
        }

            .input-box label {
                font-size: 14px;
                font-weight: 500;
                margin-bottom: 5px;
                display: block;
                color: #333;
            }

            .input-box input {
                width: 100%;
                height: 48px;
                padding: 0 18px;
                font-size: 14px;
                border-radius: 8px;
                border: 2px solid #e0e0e0;
                background: #fff;
                color: #454545;
                margin-bottom: 18px;
                outline: none;
                transition: 0.3s;
            }

                .input-box input:focus {
                    border-color: #ff8f16;
                }

        .login-btn {
            width: 40%;
            height: 48px;
            border-radius: 30px;
            background: #ff8f16;
            color: white;
            border: none;
            cursor: pointer;
            margin: 10px auto 0;
            display: block;
            text-align: center;
            line-height: 48px;
            text-decoration: none;
            transition: 0.3s;
        }

            .login-btn:hover {
                background: #d57410;
            }

        .divider {
            width: 60%;
            height: 1px;
            background: #d6d6d6;
            margin: 25px auto;
        }

        .copy {
            font-size: 12px;
            color: #666;
            margin: 0px auto;
            text-align: center;
        }

        .right {
            background: #bbe3fa;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

            .right img {
                width: 90%;
            }

        @@keyframes dropDown {
            0% {
                transform: translateY(-80px);
                opacity: 0;
            }

            50% {
                transform: translateY(10px);
                opacity: 1;
            }

            100% {
                transform: translateY(0);
            }
        }

        @@keyframes floatUpDown {
            0% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-18px);
            }

            100% {
                transform: translateY(0);
            }
        }

        .drop-float {
            animation: dropDown 1.2s ease-out forwards, floatUpDown 2.5s ease-in-out infinite 1.2s;
        }

        @@media (max-width: 992px) {
            .left h1 {
                font-size: 18px;
            }

            .left p {
                font-size: 13px;
            }
        }

        @@media (max-width: 576px) {
            .left h1 {
                font-size: 16px;
            }

            .left p {
                font-size: 12px;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- LEFT PANEL -->
            <div class="col-lg-5 col-md-12 d-flex flex-column justify-content-center left">
                <i class="la la-list" style="font-size:120px;color:orange;margin-top:-50px;"></i>
                <h1>To Do List</h1>
                <p>“A smarter system for a smarter leader — Step in and take control.”</p>

                <div class="input-box">
                    @using (Ajax.BeginForm("validate", "LogIn",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnBegin = "OnBeginAjax",
                            OnSuccess = "OnSuccessAjax",
                            OnFailure = "OnFailureAjax"
                        },
                        new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <label>Username</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input", placeholder = "Enter Username", required = "" })

                        <label>Password</label>
                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control input", placeholder = "Enter Password", required = "" })

                        <button class="login-btn">Login</button>
                    }
                </div>

                <div class="divider"></div>
                <div class="copy">Copyright @DateTime.Now.Year. All rights reserved. Design & Developed by To Do List</div>

                <div class="divider"></div>

                <div class="copy alert alert-info text-center fw-bold">
                    Username: <strong>Admin</strong> &nbsp; | &nbsp; Password: <strong>123</strong>
                </div>

                <div class="divider"></div>


            </div>

            <!-- RIGHT PANEL -->
            <div class="col-lg-7 d-none d-lg-flex right">
                <img src="~/assets/images/login.png" class="drop-float">
            </div>

        </div>
    </div>

    <!-- Required JS -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert JS -->
    <script src="~/assets/vendor/sweetalert2/dist/sweetalert2.min.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function OnBeginAjax() {
            Swal.fire({
                icon: "info",
                title: "Working on it!",
                text: "Please wait.",
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });
        }

        function OnSuccessAjax(res) {
            if (res.Status === "Success") {
                Swal.fire({
                    icon: "success",
                    title: "Good Job!",
                    text: res.Message,
                    showConfirmButton: true
                }).then(() => { window.location.href = res.URL; });
            } else if (res.Status === "CatchError") {
                window.location.href = res.URL;
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: res.Message,
                    showConfirmButton: true
                }).then(() => { window.location.href = res.URL; });
            }
        }

        function OnFailureAjax(res) {
            Swal.fire({
                icon: "error",
                title: "Failed!",
                text: res.Message,
                showConfirmButton: true
            }).then(() => {
                if (res.URL && res.URL !== "") { window.location.href = res.URL; }
            });
        }
    </script>

</body>
</html>
